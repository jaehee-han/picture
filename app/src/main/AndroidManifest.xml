<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oasyss.picturebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ChoicePictureBookActivity"></activity>
        <activity
            android:name=".activity.CharNameRecordActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.popup.ChoiceFinishPopupActivity"
            android:screenOrientation="landscape"
            android:theme="@style/popUpTheme" />
        <activity
            android:name=".activity.popup.ChoicePopupActivity"
            android:screenOrientation="landscape"
            android:theme="@style/popUpTheme" />
        <activity
            android:name=".activity.PicCharChoiceActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.CharacterChoiceActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.PaintActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>