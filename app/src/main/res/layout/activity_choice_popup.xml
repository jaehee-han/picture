<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activity.popup.ChoicePopupActivity"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/popup_noti"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:height="53dp"/>
        </LinearLayout>
        <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:padding="16dp"
            android:text="강아지를 선택하시겠습니까?"
            android:id="@+id/choice_popup_text"
            android:textColor="#000"/>
        <View
            android:background="#66bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <!-- 닫기 버튼 -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="@string/popup_cancel"
                android:textSize="15sp"
                android:textColor="#FF0000"
                android:padding="16dp"
                android:gravity="center"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:onClick="mCancel"/>
            <View
                android:background="#66bdbdbd"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <Button
                android:text="@string/popup_confirm"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="16dp"
                android:gravity="center"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:onClick="mConfirm"/>
        </LinearLayout>

</LinearLayout>